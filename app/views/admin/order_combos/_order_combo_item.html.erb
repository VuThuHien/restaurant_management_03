<tr class="new-combo-row">
  <td class="total">
    <strong>
      <%= select_tag "new_order_combo",
        options_for_select(support.load_data[:combo_select]),
        {class: "select-in-order",
        include_blank: t("order_detail.new_combo")} %>
    </strong>
  </td>
  <td class="total"><%= t "home.combo" %></td>
  <td class="total" id="combo-original-price">
  </td>
  <td class="total" id="combo-quantity">
    <%= number_field_tag "new_order_combo_quantity", 1,
      {class: "quantity-in-order", min: 1, include_blank: 1} %>
  </td>
  <td class="total" id="combo-discount"></td>
  <td class="total" id="combo-total-price">
  </td>
  <td class="total width-10 text-center" id="combo-save">
  </td>
  <td class="total width-10 text-center" id="dish-delete">
    <i class="fa fa-lg fa-times fa-big"></i>
  </td>
</tr>
