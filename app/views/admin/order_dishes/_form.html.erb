<%= form_for [:admin, @order, @order_dish] do |f| %>
  <div class="col-xs-12 label-form">
    <%= f.label :dish_name %>
    <% if @order_dish.dish.present? %>
      <p class="p-form"><%= @order_dish.dish.name %></p>
    <% else %>
      <%= f.select :dish_id, @dishes, {include_blank: false,
        selected: :dish_id}, class: "btn btn-default" %>
    <% end %>
  </div>
  <div class="col-xs-12">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>
  <div class="col-xs-12 text-center">
    <% if @order_dish.new_record? %>
        <%= f.submit t(".add_dish"), class: "btn btn-primary"%>
    <% else %>
        <%= f.submit t(".edit_dish"), class: "btn btn-success"%>
    <% end %>
  </div>
<% end %>
